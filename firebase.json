{
  "hosting": {
    "public": "dist",
    "headers":[
      {
        "source":"**/*.@(jpg|jpeg|gif|png)",
        "headers":[
          {
            "key":"Cache-Control",
            "value":"max-age=604800"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
